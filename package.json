{
  "private": true,
  "version": "2.0.0",
  "name": "PS4RemotePKGSender",
  "description": "Send PKG files to your ps4",
  "scripts": {
    "build": "electron-webpack && electron-packager ./ --platform=darwin --out ./release --overwrite --DEPCREATED_NOT_WORKING_WITH_THE_REFACTORED_VERSION",
    "dist": "electron-webpack && electron-builder --dir",
    "webpack": "electron-webpack",
    "watch": "electron-webpack dev"
  },
  "devDependencies": {
    "electron": "^3.1.13",
    "electron-builder": "^22.14.5",
    "electron-packager": "^12.2.0",
    "electron-webpack": "^2.8.2",
    "electron-webpack-vue": "^2.4.0",
    "node-sass": "4.14.1",
    "sass-loader": "10.1.1",
    "vue": "^2.6.14",
    "vue-devtools": "^5.1.4",
    "webpack": "~4.42.1"
  },
  "dependencies": {
    "source-map-support": "^0.5.16",
    "electron-config": "^1.0.0",
    "express": "^4.17.1",
    "jquery": "^3.6.0",
    "webtorrent": "^0.102.4"
  },
  "build": {
    "appId": "com.ps4remotepkgsender",
    "directories": {
        "output" : "release"
    }
  }
}
